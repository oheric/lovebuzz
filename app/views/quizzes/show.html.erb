<h1>Quiz</h1>
<div>
  <strong> Name: </strong>
<%= @quiz.name %>
</div><br>

<form>
<% @questions.each do |q| %>
  <%= q.content %> 
    <% q.answers.each do |a| %>
      <input type="radio" value=<%=a.option_value%> name=<%=q.id%>><%= a.content %><p>
    <% end %>
  <% end %>
</form>

<div>
    <%= link_to "Edit", edit_quiz_path(@quiz) %> |  
    <%= link_to "Destroy", @quiz, :confirm => 'Are you sure?', :method => :delete %> |  
    <%= link_to "Quizzes Page", quizzes_path %>  
</div>