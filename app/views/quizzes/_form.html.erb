<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @quiz do |f| %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      
      <%= f.fields_for :results do |builder| %>
        <%= render 'result_fields', :f => builder %>
      <% end %>
      <%= link_to_add_fields "Add Result", f, :results %>

      <%= f.fields_for :questions do |builder| %>
        <%= render 'question_fields', :f => builder %>
      <% end %>
      <%= link_to_add_fields "Add Question", f, :questions %>
      
      <div class="actions">
        <%= f.submit "Submit" %>
      </div>
    <% end %>
  </div>
</div>



