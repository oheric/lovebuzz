<%= form_for @quiz do |f| %>
  <div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<%= f.fields_for :questions do |builder| %>

  <%= builder.label :content, "Question" %><br>
  <%= builder.text_area :content, :rows => 3 %><br>
  <%= builder.check_box :_destroy %>
  <%= builder.label :_destroy, "Remove Question" %>

<% end %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  <% end %>



