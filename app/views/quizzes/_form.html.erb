<%= form_for @quiz do |f| %>
  <div>
  <%= f.label :name %><br>
  <%= f.text_field :name %>
</div>
<% f.fields_for :questions do |builder| %>
<div>
  <%= builder.label :content, "Question" %><br>
  <%= builder.text_area :content, :rows => 3 %>
</div>
<% end %>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
  <% end %>
